// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id                    String                 @id @default(cuid())
  name                  String?
  email                 String?                @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  userGroups            userGroup[]
  sendLoginInfo         Boolean                @default(false)
  role                  UserRole               @default(USER)
  isTwoFactorEnabled    Boolean                @default(false)
  accounts              Account[]
  twoFactorConfirmation TwoFactorConfirmation?
  category              category?              @relation(fields: [categoryId], references: [id])
  categoryId            Int?
  post                  Post[]
  sessions              Session[]
  sites                 Site[]
  phoneNumber           String?
  address               String?
  city                  String?
  state                 String?
  zipCode               String?
  country               String?
  // Add relation to customFeatures
  customFeatures        CustomFeature[]

  @@index([categoryId])
}

model Site {
  id            String               @id @default(cuid())
  name          String?
  description   String?              @db.Text
  logo          String?              @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/JRajRyC-PhBHEinQkupt02jqfKacBVHLWJq7Iy.png") @db.Text
  font          String               @default("font-cal")
  image         String?              @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash String?              @default("data:image/png;base64,") @db.Text
  subdomain     String?              @unique
  customDomain  String?              @unique
  message404    String?              @default("Blimey! You've found a page that doesn't exist.") @db.Text
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  user          User?                @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId        String?
  posts         Post[]
  providers     provider[]
  services      service[]
  dailySchedules SiteDailySchedule[]

  @@index([userId])
}

model SiteDailySchedule {
  id            String           @id @default(cuid())
  dayOfWeek     Dayofweek
  siteId        String
  site          Site             @relation(fields: [siteId], references: [id], onDelete: Cascade)
  workTimes     SiteWorkTime[]
  breakTimes    SiteBreakTime[]
  isWorkingDay  Boolean          @default(true)

  @@index([siteId])
}

model SiteWorkTime {
  id                    String            @id @default(cuid())
  startTime             DateTime
  endTime               DateTime
  siteDailyScheduleId   String
  siteDailySchedule     SiteDailySchedule @relation(fields: [siteDailyScheduleId], references: [id], onDelete: Cascade)

  @@index([siteDailyScheduleId])
}

model SiteBreakTime {
  id                    String            @id @default(cuid())
  startTime             DateTime
  endTime               DateTime
  siteDailyScheduleId   String
  siteDailySchedule     SiteDailySchedule @relation(fields: [siteDailyScheduleId], references: [id], onDelete: Cascade)

  @@index([siteDailyScheduleId])
}




model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String   @id @default(cuid())
  email      String
  token      String   @unique
  expire     DateTime

  @@unique([identifier, email, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorConfirmation {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}


model FeatureGroup {
  id             String          @id @default(cuid())
  name           String
  features       CustomFeature[]

  @@index([name])
}

model CustomFeature {
  id             String   @id @default(cuid())
  title          String
  shortDesc      String?  @db.Text
  longDesc       String?  @db.Text
  image          String?
  status         FeatureStatus
  isActive       Boolean  @default(true)
  warningMessage String?  @default("??? ????? ?????? ??? ????")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  userId         String?
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId        String
  group          FeatureGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([groupId])
}

enum FeatureStatus {
  FREE
  POPULAR
  MARKETING
  NEW
}



model category {
  id                  Int     @id @default(autoincrement())
  name                String  @unique
  description         String  @db.Text
  image               String? @default("")
  isVisibleOnMainPage Boolean @default(true)

  isFeatured        Boolean            @default(false)
  position          Int                @default(0)
  users             User[]
  service           service[]
  suggestedServices SuggestedService[]
}

model SuggestedService {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String    @db.Text
  categoryId  Int
  category    category? @relation(fields: [categoryId], references: [id])
}

model duration {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  services service[]
}

model ServiceDailySchedule {
  id             String           @id @default(cuid())
  dayOfWeek      Dayofweek
  serviceId      String
  service        service          @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  workTimes      ServiceWorkTime[]
  breakTimes     ServiceBreakTime[]
  isWorkingDay  Boolean      @default(true)
  @@index([serviceId])
}

enum Dayofweek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model ServiceWorkTime {
  id                    String                 @id @default(cuid())
  startTime             DateTime
  endTime               DateTime
  serviceDailyScheduleId String
  serviceDailySchedule   ServiceDailySchedule  @relation(fields: [serviceDailyScheduleId], references: [id], onDelete: Cascade)

  @@index([serviceDailyScheduleId])
}

model ServiceBreakTime {
  id                    String                 @id @default(cuid())
  startTime             DateTime
  endTime               DateTime
  serviceDailyScheduleId String
  serviceDailySchedule   ServiceDailySchedule  @relation(fields: [serviceDailyScheduleId], references: [id], onDelete: Cascade)

  @@index([serviceDailyScheduleId])
}

model service {
  id                  String                @id @default(cuid())
  name                String                @unique
  description         String?
  image               String?
  isOnMainPage        Boolean               @default(false)
  price               Decimal
  salesTax            Decimal?
  directLink          String?
  maxBookingPerSlot   Int?
  durationId          Int
  duration            duration?             @relation(fields: [durationId], references: [id])
  categoryId          Int?
  category            category?             @relation(fields: [categoryId], references: [id])
  providerId          String?
  provider            provider?             @relation(fields: [providerId], references: [id])
  serviceQuestions    serviceQuestion[]
  memberships         membership[]
  products            product[]
  appointments        Appointment[]
  bookings            Booking[]
  ServiceAvailability ServiceAvailability[]
  siteId              String?
  site                Site?                 @relation(fields: [siteId], references: [id], onDelete: Cascade)
  locations           Location[]
  dailySchedules      ServiceDailySchedule[]

  @@index([siteId])
  @@index([categoryId])
  @@index([providerId])
}


enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELED
  COMPLETED
}

model Location {
  id             String              @id @default(cuid())
  name           String
  address        String
  city           String
  state          String
  zipCode        String
  country        String
  services       service[]
  workingHours   companyWorkingHours @relation(fields: [workingHoursId], references: [id])
  workingHoursId String
  company        company             @relation(fields: [companyId], references: [id])
  companyId      Int

  @@index([workingHoursId])
  @@index([companyId])
}

model Booking {
  id            String        @id @default(cuid())
  customerId    String
  customer      Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  serviceId     String
  service       service       @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  providerId    String
  provider      provider      @relation(fields: [providerId], references: [id], onDelete: Cascade)
  appointmentId String
  appointment   Appointment   @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  bookingDate   DateTime      @default(now())
  status        BookingStatus @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([customerId])
  @@index([serviceId])
  @@index([providerId])
  @@index([appointmentId])
}

model Customer {
  id           String        @id @default(cuid())
  name         String?
  email        String        @unique
  phoneNumber  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]
  bookings     Booking[]

  @@index([email])
}
model ProviderDailySchedule {
  id             String           @id @default(cuid())
  dayOfWeek      Dayofweek
  providerId     String
  provider       provider         @relation(fields: [providerId], references: [id], onDelete: Cascade)
  workTimes      WorkTime[]
  breakTimes     BreakTime[]
  isWorkingDay  Boolean      @default(true)

  @@index([providerId])
}



model WorkTime {
  id                    String                @id @default(cuid())
  startTime             DateTime
  endTime               DateTime
  providerDailyScheduleId String
  providerDailySchedule   ProviderDailySchedule @relation(fields: [providerDailyScheduleId], references: [id], onDelete: Cascade)

  @@index([providerDailyScheduleId])
}

model BreakTime {
  id                    String                @id @default(cuid())
  startTime             DateTime
  endTime               DateTime
  providerDailyScheduleId String
  providerDailySchedule   ProviderDailySchedule @relation(fields: [providerDailyScheduleId], references: [id], onDelete: Cascade)

  @@index([providerDailyScheduleId])
}

model provider {
  id                  String                @id @default(cuid())
  name                String                @unique
  description         String?
  image               String?
  phone               String?
  email               String?
  maxCapacity         Int
  bookingLink         String?
  siteId              String?
  site                Site?                 @relation(fields: [siteId], references: [id], onDelete: Cascade)
  isOnBookingPage     Boolean               @default(false)
  services            service[]
  ServiceAvailability ServiceAvailability[]
  Appointment         Appointment[]
  Booking             Booking[]
  dailySchedules      ProviderDailySchedule[]

  @@index([siteId])
}


model Appointment {
  id              String            @id @default(cuid())
  customerId      String
  customer        Customer          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  serviceId       String
  service         service           @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  providerId      String
  provider        provider          @relation(fields: [providerId], references: [id], onDelete: Cascade)
  appointmentTime DateTime
  duration        Int
  status          AppointmentStatus @default(PENDING)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  Booking         Booking[]

  @@index([customerId])
  @@index([serviceId])
  @@index([providerId])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELED
  COMPLETED
}

model ServiceAvailability {
  id         String   @id @default(cuid())
  date       DateTime
  startTime  DateTime
  endTime    DateTime
  service    service  @relation(fields: [serviceId], references: [id])
  serviceId  String
  provider   provider @relation(fields: [providerId], references: [id])
  providerId String

  @@index([serviceId])
  @@index([providerId])
}

model product {
  id                String   @id @default(cuid())
  name              String   @unique
  barcode           String   @unique
  image             String
  description       String
  price             Decimal
  vat               Decimal //مالبات بر ارزس  افزوده
  productLocation   String
  isOnBookingPage   Boolean  @default(false)
  addToBookingPrice Boolean  @default(false)
  serviceId         String
  service           service? @relation(fields: [serviceId], references: [id])
}

model membership {
  id                  String   @id @default(cuid())
  name                String   @unique
  description         String
  image               String
  durationDays        Int      @default(0)
  durationMonths      Int      @default(0)
  durationYears       Int      @default(0)
  startDate           DateTime @default(now())
  price               Decimal
  salesTax            Decimal
  totalSessions       Int      @default(0)
  maxActiveBookings   Int      @default(1)
  isVisibleOnBooking  Boolean  @default(true)
  showAfterMembership String   @default("") // ID of the membership to show after
  bookingLink         String
  serviceId           String
  service             service? @relation(fields: [serviceId], references: [id])
}

model serviceQuestion {
  id                 String   @id @default(cuid())
  title              String
  fieldType          FildType @default(CHECKBOX)
  defaultValue       String   @default("")
  isOptional         Boolean  @default(false)
  isVisibleForAll    Boolean  @default(true)
  isVisibleOnBooking Boolean  @default(true)
  addToInvoice       Boolean  @default(false)
  position           Int      @default(0)
  serviceId          String
  service            service  @relation(fields: [serviceId], references: [id])
}

model serviceTime {
  value Int    @id @default(autoincrement())
  label String
}

enum FildType {
  CHECKBOX
  TEXTBox_SingleLine
  TEXTBox_MultipleLines
  TEXTBox_DigitsOnly
  DROPDOWN_Selection
  DATE
  BARCODE
  HTML_Custom
}

model Post {
  id                    String               @id @default(cuid())
  title                 String               @unique
  content               String
  description           String?              @db.Text
  slug                  String               @default(cuid())
  user                  User?                @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId                String?
  published             Boolean              @default(false)
  site                  Site?                @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId                String?
  companyWorkingHoursId String
  companyWorkingHours   companyWorkingHours? @relation(fields: [companyWorkingHoursId], references: [id])
  visibility            String               @default("PUBLIC")
  status                String               @default("DRAFT")
  publishDate           DateTime             @default(now())
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt
  category              String               @default("")
  keywords              String[]             @default([])
  image                 String?              @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash         String?              @default("data:image/png;base64,") @db.Text
  thumbnail             String               @default("")
  links                 String[]             @default([])

  @@unique([slug, siteId])
  @@index([siteId])
  @@index([userId])
}

model company {
  id               Int                   @id @default(autoincrement())
  name             String                @unique
  logo             String
  companyImage     String
  phone            String
  email            String
  website          String
  description      String
  address          String
  city             String
  state            String
  zipCode          String
  country          String
  socialMediaLinks Json                  @default("{}") @db.JsonB
  policies         String
  aboutUs          String
  contactUs        String
  faq              Json                  @default("{}") @db.JsonB
  workingHours     companyWorkingHours[]
  locations        Location[]
}

model companyWorkingHours {
  id         String     @id @default(cuid())
  companyId  Int        @unique
  company    company    @relation(fields: [companyId], references: [id])
  dayOfWeek  Dayofweek  @default(MONDAY)
  isOpen     Boolean
  openTime   DateTime   @db.Time()
  closeTime  DateTime   @db.Time()
  breakStart DateTime   @db.Time()
  breakEnd   DateTime   @db.Time()
  post       Post[]
  locations  Location[]
}



model userGroup {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String
  permissions Json    @default("{}") @db.JsonB
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
}
